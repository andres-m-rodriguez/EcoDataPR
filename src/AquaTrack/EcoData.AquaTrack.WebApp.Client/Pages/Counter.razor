@page "/counter"

<MudText Typo="Typo.h4" Class="mb-4">Counter</MudText>

<MudPaper Class="pa-4" Elevation="2">
    <MudText Typo="Typo.h6" Class="mb-2">Current count: @_count</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount" StartIcon="@Icons.Material.Filled.Add">
        Click me
    </MudButton>
</MudPaper>

@code {
    private int _count;

    private void IncrementCount() => _count++;
}
